{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "src/typing",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/typing/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "./"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "razzle.config.js",
    "dist"
  ]
}
